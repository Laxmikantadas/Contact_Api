<section class="conlist bg-gradient-to-r from-indigo-50 to-indigo-200 py-12 min-h-screen">
  <article class="container mx-auto max-w-6xl bg-white shadow-lg rounded-lg p-8">
    <!-- Page Title -->
    <h1 class="text-4xl font-extrabold text-center text-indigo-700 mb-10">
      Contact List
    </h1>

    <!-- Contacts Loop -->
    {{#each payload}}
    <div class="flex justify-between items-center bg-white shadow-md rounded-lg p-4 mb-6 hover:shadow-lg transition-shadow duration-300">
      <div class="flex flex-wrap gap-4 text-lg">
        <p>
          <span class="font-semibold text-indigo-600">First Name:</span> {{this.fname}}
        </p>
        <p>
          <span class="font-semibold text-indigo-600">Last Name:</span> {{this.lname}}
        </p>
        <p>
          <span class="font-semibold text-indigo-600">Number:</span> {{this.nmbr}}
        </p>
        <p>
          <span class="font-semibold text-indigo-600">Saved Location:</span> {{this.loc}}
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex space-x-3">
        <a href="/api/{{this._id}}" class="bg-blue-500 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-600 transition-all duration-300">
          Info
        </a>
        <a href="/api/edit/{{this._id}}" class="bg-green-500 text-white px-4 py-2 rounded-md shadow-md hover:bg-green-600 transition-all duration-300">
          Edit
        </a>
        <a href="/api/delete/{{this._id}}" class="bg-red-500 text-white px-4 py-2 rounded-md shadow-md hover:bg-red-600 transition-all duration-300">
          Delete
        </a>
      </div>
    </div>
    {{else}}
    <!-- No Contacts Message -->
    <h1 class="text-center text-2xl font-semibold text-indigo-600">
      No Contact List Found
    </h1>
    {{/each}}
  </article>
</section>
